{
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "coveragePathIgnorePatterns": ["/node_modules/"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
